<?xml version="1.0"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  <form name="product-form" model="com.axelor.apps.base.db.Product" title="Product"
    id="openauction-product-form" extension="true">
    <extend target="//panel[@name='salePanel']">
      <insert position="before">
        <panel title="OpenAuction" name="openauctionPanel">
          <field name="purchasePreInvoicing"/>
          <field name="invoicingType"/>
          <field name="commissionType"/>
          <field name="contactImputationType"/>
          <field name="lotImputationType"/>
          <field name="serviceType"/>
          <field name="transactionType"/>
          <field name="imputationBase"/>
          <field name="printPercentage"/>
          <field name="minimumChargeAmount"/>
          <field name="maximumChargeAmount"/>
          <field name="storageTimeUsage"/>

          <field name="verificationSubstItemNo"/>
          <field name="resaleRights"/>
          <field name="servicePercent"/>
          <field name="valueAddedItem"/>
          <field name="tariffScale"/>
          <field name="baseCalcBeforeAuction"/>
          <field name="baseCalcAfterAuction"/>
          <field name="authorizedZeroBudgetedCost"/>
          <field name="invoiceServiceDetail"/>
          <field name="advanceOnSale"/>
          <field name="partialBillingAllowed"/>
          <field name="checkChargeAmountRange"/>

          <field name="allowLineDisc"/>
          <field name="quantityEvaluation"/>
          <field name="detailledSellerGLPosting"/>
          <field name="displayInPayment"/>
          <field name="inventoryCategoryItem"/>
          <field name="inventoryItemDescription"/>
          <field name="invMissionAssOrderPriority"/>
          <field name="authorizedZeroBudgetedCost"/>
          <field name="servicePriceSystem"/>
          <field name="useProductFamilyLot"/>
        </panel>
      </insert>
    </extend>

    <extend target="//panel-related[@name='complementaryProductPanel']">
      <attribute name="hidden" value="true"/>
    </extend>

  </form>
</object-views>